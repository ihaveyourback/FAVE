    <update id="updateArticle"
            parameterType="com.yhkim.fave.entities.InquiriesArticleEntity">
        UPDATE `fave`.`inquiries`
        SET `user_email`    = #{userEmail},
            `user_nickname` = #{userNickname},
            `title`         = #{title},
            `content`       = #{content},
            `create_at`     = #{createdAt},
            `update_at`     = #{updateAt},
            `is_deleted`    = #{isDeleted},
            `view`          = #{view},
            `is_resolved`   =#{isResolved}
        WHERE `index` = #{index}
        LIMIT 1
