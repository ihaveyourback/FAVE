<!--김범수-->
    <select id="selectInquiries" resultType="com.yhkim.fave.entities.InquiriesEntity">
        SELECT `index`         AS `index`,
               `title`         AS `title`,
               `content`       AS `content`,
               `user_email`    AS `userEmail`,
               `user_nickname` AS `userNickName`,
               `create_at`     AS `createAt`,
               `update_at`     AS `updateAt`,
               `is_deleted`    AS `isDeleted`,
               `is_resolved`   AS `isResolved`,
               `view`          AS `view`
        FROM `fave`.`inquiries`
        WHERE `is_resolved` = '답변 대기'
        ORDER BY `index` DESC
        LIMIT #{limitCount} OFFSET #{offsetCount}
    </select>
    <select id="selectInquiriesCount" resultType="java.lang.Integer">
        SELECT COUNT(0)
        FROM `fave`.`inquiries`
        WHERE `is_resolved` = '답변 대기'
    </select>
<!--    &#45;&#45;이석민-->
    <insert id="insertArticle"
            useGeneratedKeys="true"
            keyColumn="index"
            keyProperty="index"
            parameterType="com.yhkim.fave.entities.InquiriesArticleEntity">
        INSERT INTO `fave`.`inquiries` (`title`, `content`, `user_email`, `user_nickname`, `create_at`, `update_at`,
                                        `is_deleted`, `view`, `is_resolved`)
        VALUES (#{title}, #{content}, #{userEmail}, #{userNickname}, #{createdAt}, #{updateAt}, #{isDeleted}, #{view},
                #{isResolved})
    </insert>

    <select id="selectArticleByIndex" resultType="com.yhkim.fave.entities.InquiriesArticleEntity">
        SELECT `index`         AS `index`,
               `title`         AS `title`,
               `content`       AS `content`,
               `user_email`    AS `userEmail`,
               `user_nickname` AS `userNickname`,
               `create_at`     AS `createdAt`,
               `update_at`     AS `updateAt`,
               `is_deleted`    AS `isDeleted`,
               `view`          AS `view`,
               `is_resolved`   AS `isResolved`
        FROM `fave`.`inquiries`
        WHERE `index` = #{index}
        LIMIT 1
    </select>

